{
  "$schema": "https://raw.githubusercontent.com/jetify-com/devbox/0.14.0/.schema/devbox.schema.json",
  "packages": {
    "bashInteractive":           "latest",
    "coreutils":                 "latest",
    "moreutils":                 "latest",
    "uv":                        "latest",
    "git":                       "latest",
    "tig":                       "latest",
    "glow":                      "latest",
    "runme":                     "latest",
    "python312Packages.ipython": "latest",
    "refurb":                    "latest",
    "python":                    "3.12"
  },
  "env": {
    "UV_PYTHON":            "python3",
    "UV_PYTHON_PREFERENCE": "only-system",
    "VENV_DIR":             ".venv"
  },
  "shell": {
    "init_hook": [
      "unset PYTHONPATH",
      "printf 'VENVDIR=%s\n' ${VENV_DIR}",
      "[ -d ${VENV_DIR} ] || uv venv",
      "[ -d ${VENV_DIR} ] && . ${VENV_DIR}/bin/activate",
      "uv sync",
      "pip() { uv pip \"$@\"; }"
    ],
    "scripts": {
      "pip": [
        "uv pip \"$@\""
      ],
      "update_locks": [
        "uv lock \"$@\""
      ]
    }
  }
}
