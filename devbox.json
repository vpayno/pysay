{
  "$schema": "https://raw.githubusercontent.com/jetify-com/devbox/0.16.0/.schema/devbox.schema.json",
  "name":    "devbox-shell",
  "packages": {
    "bashInteractive":           "latest",
    "coreutils":                 "latest",
    "moreutils":                 "latest",
    "git":                       "latest",
    "tig":                       "latest",
    "glow":                      "latest",
    "runme":                     "latest",
    "python312Packages.ipython": "latest",
    "refurb":                    "latest",
    "python":                    "3.13",
    "docker-client":             "latest",
    ".#uv":                      "",
    "cowsay":                    "latest",
    "zlib": {
      "version": "latest",
      "outputs": ["out", "dev"]
    },
    "libpng":  "latest",
    "libjpeg": "latest",
    "expat": {
      "version": "latest",
      "outputs": ["out", "dev"]
    },
    "pkg-config": "latest",
    "gtk3": {
      "version": "latest",
      "outputs": ["out", "dev"]
    },
    "wxGTK32":       "latest",
    "wxwidgets_3_3": "latest"
  },
  "env": {
    "UV_PYTHON":            "python3.13",
    "UV_PYTHON_PREFERENCE": "only-system",
    "VENV_DIR":             ".venv",
    "LD_LIBRARY_PATH":      "$DEVBOX_PACKAGES_DIR/lib:.venv/lib"
  },
  "shell": {
    "init_hook": [
      "unset PYTHONPATH",
      "printf 'VENVDIR=%s\n' ${VENV_DIR}",
      "[ -d ${VENV_DIR} ] || uv venv",
      "[ -d ${VENV_DIR} ] && . ${VENV_DIR}/bin/activate",
      "uv sync",
      "cowsay \"Welcome to $(hatch project metadata | jq -r '. | \"\\(.name)-\\(.version)\"')'s devbox shell!\""
    ],
    "scripts": {
      "lint": [
        "uv run poe ruff",
        "uv run poe pylint",
        "uv run poe pyright",
        "uv run poe refurb",
        "uv run poe bandit",
        "uv run poe mypy"
      ],
      "outdated": [
        "uv run poe outdated"
      ],
      "pip": [
        "uv pip \"$@\""
      ],
      "test": [
        "uv run poe test"
      ],
      "update_locks": [
        "nix run .#updateProjectLocks"
      ]
    }
  }
}
